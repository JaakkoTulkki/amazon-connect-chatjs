{
  "name": "amazon-connect-chatjs",
  "version": "1.1.8",
  "main": "dist/amazon-connect-chat.js",
  "types": "src/index.d.ts",
  "engines": {
    "node": ">=10.0.0"
  },
  "directories": {
    "lib": "./dist"
  },
  "files": [
    "dist/",
    "src/index.d.ts"
  ],
  "description": "Provides chat support to AmazonConnect customers",
  "scripts": {
    "test": "jest",
    "release": "tsc && jest && webpack --mode=production",
    "devo": "jest && webpack --mode=development",
    "watch": "webpack --watch",
    "dev": "webpack --mode=development && webpack --watch",
    "server": "webpack-dev-server --hot --inline",
    "clean": "rm -rf build/ node_modules build",
    "release-watch": "npm run release && npm run watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amazon-connect/amazon-connect-chatjs.git"
  },
  "keywords": [
    "amazon",
    "connect",
    "streamJs",
    "chatjs"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": [
      "./test/jestSetup.js"
    ],
    "transform": {
      ".(js|jsx)$": "babel-jest"
    },
    "testRegex": "/src/.*\\.spec\\.js$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "html"
    ]
  },
  "author": "Amazon Web Services",
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.4",
    "babel-core": "^7.0.0-0",
    "babel-loader": "^8.2.2",
    "eslint": "^5.9.0",
    "eslint-loader": "^2.1.1",
    "jest": "^27.1.1",
    "regenerator-runtime": "^0.13.9",
    "typescript": "^4.4.2",
    "webpack": "^5.52.0",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.7.3"
  },
  "dependencies": {
    "sprintf-js": "^1.1.2",
    "@types/express-serve-static-core": "^4.17.21"
  }
}
